pkgbase='rocm-rocALUTION'
pkgname=('rocm-rocALUTION')
pkgver=6.3.1
pkgrel=631000
pkgdesc="rocm-core is a utility which can be used to get ROCm release version."
arch=('loong64' 'x86_64')
license=('MIT')
url="https://github.com/ROCm/ROCT-Thunk-Interface.git"

source=(
    "git+https://github.com/ROCm/rocALUTION.git#tag=rocm-$pkgver"
)
b2sums=('SKIP')
depends=(
  "rocm-clr=${pkgver}"
)
PATH=/opt/rocm-${pkgver}/bin:$PATH
prepare() {
  mkdir build || true
  cd build
  if [ -n $AMDGPU_TARGETS ] && [ $AMDGPU_TARGETS != 'all' ]; then
    targetSet=( -DAMDGPU_TARGETS=${AMDGPU_TARGETS} )
  else
    targetSet=( )
  fi
  cmake ../rocALUTION \
   -DCMAKE_BUILD_TYPE=RelWithDebInfo \
   -DCMAKE_FIND_ROOT_PATH=/opt/rocm-${pkgver}/ \
   -DCMAKE_PREFIX_PATH="/opt/rocm-${pkgver}/hip/cmake/;/opt/rocm-${pkgver}/lib64/cmake/hip;/opt/rocm-${pkgver}/;/usr" \
   -DCMAKE_INSTALL_PREFIX=/opt/rocm-${pkgver} \
   -DSUPPORT_HIP=ON \
   -DSUPPORT_OMP=ON \
   -DBUILD_SHARED_LIBS=ON \
   -DCMAKE_EXE_LINKER_FLAGS="-L/opt/rocm-${pkgver}/lib  -L/opt/rocm-${pkgver}/hip/lib" \
   -DCMAKE_INSTALL_RPATH="/opt/rocm-${pkgver}/lib;/opt/rocm-${pkgver}/lib/llvm/lib;/opt/rocm-${pkgver}/lib64" \
   -DCMAKE_CXX_FLAGS="-parallel-jobs=$(nproc) -I/opt/rocm-${pkgver}/include -stdlib=libc++ -fopenmp" \
   -DCMAKE_C_COMPILER=/opt/rocm-${pkgver}/lib/llvm/bin/clang \
   -DCMAKE_CXX_COMPILER=/opt/rocm-${pkgver}/lib/llvm/bin/clang++ \
   -DCMAKE_HIP_COMPILER=/opt/rocm-${pkgver}/bin/hipcc \
   -DCMAKE_LINKER_TYPE=LLD \
   ${targetSet[@]} \
  -G "Unix Makefiles"
}
build() {
  mkdir build || true
  cd build
  make -j$(nproc)
}

check() {
#  cd "ROCm-CompilerSupport"
#  cd build
#  make ctest
echo
}

#packaging() {

#}
package() {
  cd build
  make DESTDIR="$pkgdir/" install
}
