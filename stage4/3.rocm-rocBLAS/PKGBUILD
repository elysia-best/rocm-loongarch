pkgbase='rocm-rocBLAS'
pkgname=('rocm-rocBLAS')
pkgver=6.4.3
pkgrel=643000
pkgdesc="rocm-core is a utility which can be used to get ROCm release version."
arch=('loong64' 'x86_64' 'riscv64')
license=('MIT')
url="https://github.com/ROCm/ROCT-Thunk-Interface.git"

source=(
    "git+https://github.com/ROCm/rocBLAS.git#tag=rocm-$pkgver"
    "git+https://github.com/ROCm/Tensile.git#tag=rocm-$pkgver"
    "git+https://github.com/google/googletest.git"
)
b2sums=('SKIP' 'SKIP' 'SKIP')
depends=("rocm-clr=${pkgver}")
PATH=/opt/rocm-${pkgver}/bin:/opt/rocm-${pkgver}/lib/llvm/bin:$PATH
export ROCM_PATH=/opt/rocm-${pkgver}
prepare() {
  cd Tensile
    rmdir HostLibraryTests/googletest || true
    ln -s $PWD/../googletest HostLibraryTests/googletest
  cd ..
  CFLAGS="-fPIC -I/opt/rocm-${pkgver}/include"
  cat  > toolchain.cmake << EOF
set(CMAKE_BUILD_TYPE "Release")
set(CMAKE_C_FLAGS "$CFLAGS")
set(CMAKE_CXX_FLAGS "$CFLAGS -parallel-jobs=$(nproc)")
set(CMAKE_BUILD_RPATH "/opt/rocm-${pkgver}/lib;/opt/rocm-${pkgver}/lib64;/opt/rocm-${pkgver}/lib/llvm/lib")
set(CMAKE_INSTALL_RPATH "/opt/rocm-${pkgver}/lib;/opt/rocm-${pkgver}/lib64;/opt/rocm-${pkgver}/lib/llvm/lib")
set(CMAKE_FIND_ROOT_PATH "/opt/rocm-${pkgver}/")
set(CMAKE_C_COMPILER "/opt/rocm-${pkgver}/lib/llvm/bin/clang")
set(CMAKE_CXX_COMPILER "/opt/rocm-${pkgver}/lib/llvm/bin/amdclang++")
set(CMAKE_SHARED_LINKER_FLAGS "-L/opt/rocm-${pkgver}/lib64")
set(CMAKE_EXE_LINKER_FLAGS "-L/opt/rocm-${pkgver}/lib64")
EOF

  mkdir build || true
  cd build
  if [ -n $GPU_TARGETS ] && [ $GPU_TARGETS != 'all' ]; then 
    targetSet=( -DGPU_TARGETS=$GPU_TARGETS -DTensile_ARCHITECTURE=$GPU_TARGETS )
  else
    targetSet=( )
  fi

  cmake ../rocBLAS \
   -DROCM_PATH=/opt/rocm-${pkgver} \
   -DRUN_HEADER_TESTING=OFF \
   -DTensile_TEST_LOCAL_PATH=$PWD/../Tensile \
   -DCMAKE_INSTALL_PREFIX=/opt/rocm-${pkgver} \
   -DVIRTUALENV_PYTHON_EXE=/usr/bin/python3.12 \
   -DBUILD_FORTRAN_CLIENTS=ON \
   -DTensile_ROOT=$PWD/virtualenv/lib/python3.12/site-packages/Tensile \
   -DBUILD_CLIENTS_SAMPLES=ON \
   -DBUILD_CLIENTS_BENCHMARKS=OFF \
   -DBUILD_CLIENTS_TESTS=OFF \
   -DBUILD_WITH_HIPBLASLT=ON \
   -DCMAKE_TOOLCHAIN_FILE=$PWD/../toolchain.cmake \
   ${targetSet[@]} \
  -G "Unix Makefiles"
}
build() {
  mkdir build || true
  cd build
  make -j$(nproc)
  make rocblas-common
}

check() {
echo
}

package() {
  cd build
  make DESTDIR="$pkgdir/" install
}

