pkgbase='rocm-clr'
pkgname=('rocm-clr')
pkgver=6.4.3
pkgrel=643000
pkgdesc="rocm-core is a utility which can be used to get ROCm release version."
arch=('loong64' 'x86_64' 'riscv64')
license=('MIT')
url="https://github.com/ROCm/ROCT-Thunk-Interface.git"

source=(
    "git+https://github.com/ROCm/HIP.git#tag=rocm-$pkgver"
    "git+https://github.com/ROCm/llvm-project.git#tag=rocm-$pkgver"
    "git+https://github.com/ROCm/clr.git#tag=rocm-$pkgver"
    "0001-HIPAMD-DISABLE-glibcxx_assert.patch"
    "0002-support-LoongArch-RISCV.patch"
    "0003-hip-header-disbale-glibcxx-assert.patch"
    "0004-rewrite-hip-embed-pch.patch"
)
b2sums=('SKIP' 'SKIP' 'SKIP' 'SKIP' 'SKIP' 'SKIP' 'SKIP')
PATH=/opt/rocm-${pkgver}/bin:/opt/rocm-${pkgver}/lib/llvm/bin:$PATH
depends=("rocm-llvm=${pkgver}"
"rocm-cmake=${pkgver}"
"rocm-rocr-runtime=${pkgver}"
)

prepare() {
  mkdir hipcc-build
  cd hipcc-build
    cmake ../llvm-project/amd/hipcc -G Ninja
    ninja
  cd ..

  cd clr
    git apply ../0001-HIPAMD-DISABLE-glibcxx_assert.patch
    git apply ../0002-support-LoongArch-RISCV.patch
    git apply ../0004-rewrite-hip-embed-pch.patch
  cd ..
  cd HIP
    git apply ../0003-hip-header-disbale-glibcxx-assert.patch
  cd ..
  CFLAGS=""
  cat  > toolchain.cmake << EOF
set(CMAKE_BUILD_TYPE "RelWithDebInfo")
set(CMAKE_C_FLAGS "$CFLAGS")
set(CMAKE_CXX_FLAGS "$CFLAGS")
set(CMAKE_BUILD_RPATH "/opt/rocm-${pkgver}/lib;/opt/rocm-${pkgver}/lib64;/opt/rocm-${pkgver}/lib/llvm/lib;/opt/rocm-${pkgver}/lib/llvm/lib64")
set(CMAKE_INSTALL_RPATH "/opt/rocm-${pkgver}/lib;/opt/rocm-${pkgver}/lib64;/opt/rocm-${pkgver}/lib/llvm/lib;/opt/rocm-${pkgver}/lib/llvm/lib64")
set(CMAKE_FIND_ROOT_PATH "/opt/rocm-${pkgver}/")
set(CMAKE_C_COMPILER "/opt/rocm-${pkgver}/lib/llvm/bin/clang")
set(CMAKE_CXX_COMPILER "/opt/rocm-${pkgver}/lib/llvm/bin/clang++")
EOF
  mkdir build || true
  cd build
  cmake ../clr/ \
   -DCMAKE_TOOLCHAIN_FILE=$PWD/../toolchain.cmake \
   -DHIP_COMMON_DIR=$PWD/../HIP/ \
   -DHIPCC_BIN_DIR=$PWD/../hipcc-build \
   -DHIP_PLATFORM=amd \
   -DCLR_BUILD_HIP=ON \
   -DCLR_BUILD_OCL=ON \
   -DBUILD_ICD=ON \
   -DROCM_PATH=/opt/rocm-${pkgver}/ \
   -DCMAKE_INSTALL_PREFIX="/opt/rocm-${pkgver}" \
   -DHIP_ENABLE_ROCPROFILER_REGISTER=OFF \
   -DAMD_ICD_LIBRARY=$PWD/opencl/khronos/icd/libOpenCL.so \
   -G "Unix Makefiles"
  sed -i 's!.bat!!g' hipamd/cmake_install.cmake
}
build() {
  mkdir build || true
  cd build
  make OpenCL -j$(nproc)
  make -j$(nproc)
}

check() {
    echo
}

#packaging() {

#}
package() {
  cd build
  make DESTDIR="$pkgdir/" install
}
