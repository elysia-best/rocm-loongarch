pkgbase='rocm_bandwidth_test'
pkgname=('rocm_bandwidth_test')
pkgver=6.4.1
pkgrel=641000
pkgdesc="rocm-core is a utility which can be used to get ROCm release version."
arch=('loong64' 'x86_64')
license=('MIT')
url="https://github.com/ROCm/ROCT-Thunk-Interface.git"

source=(
    "git+https://github.com/ROCm/rocm_bandwidth_test.git#tag=rocm-$pkgver"
)
b2sums=('SKIP')
depends=(
  "rocm-clr=${pkgver}"
)
PATH=/opt/rocm-${pkgver}/bin:/opt/rocm-${pkgver}/lib/llvm/bin:$PATH
prepare() {
  sed -i '62d' rocm_bandwidth_test/CMakeLists.txt 
#  sed -i '32i find_package( HIP CONFIG REQUIRED )' rocm_bandwidth_test/test/CMakeLists.txt
  CFLAGS="-Wno-unused-command-line-argument -I/opt/rocm-${pkgver}/include/hsa"
  cat  > toolchain.cmake << EOF
set(CMAKE_BUILD_TYPE "Release")
set(CMAKE_C_FLAGS "$CFLAGS")
set(CMAKE_CXX_FLAGS "$CFLAGS")
set(CMAKE_BUILD_RPATH "/opt/rocm-${pkgver}/lib;/opt/rocm-${pkgver}/lib64;/opt/rocm-${pkgver}/lib/llvm/lib")
set(CMAKE_INSTALL_RPATH "/opt/rocm-${pkgver}/lib;/opt/rocm-${pkgver}/lib64;/opt/rocm-${pkgver}/lib/llvm/lib")
set(CMAKE_FIND_ROOT_PATH "/opt/rocm-${pkgver}/")
set(CMAKE_C_COMPILER "/opt/rocm-${pkgver}/lib/llvm/bin/clang")
set(CMAKE_CXX_COMPILER "/opt/rocm-${pkgver}/lib/llvm/bin/clang++")
EOF
  mkdir build || true
  cd build
  CFLAGS="-Wno-unused-command-line-argument"
  cmake ../rocm_bandwidth_test \
   -DCMAKE_TOOLCHAIN_FILE=$PWD/../toolchain.cmake \
   -DCMAKE_INSTALL_PREFIX=/opt/rocm-${pkgver} \
  -G "Unix Makefiles"
}
build() {
  mkdir build || true
  cd build
  make -j$(nproc)
}

check() {
#  cd "ROCm-CompilerSupport"
#  cd build
#  make ctest
echo
}

#packaging() {

#}
package() {
  cd build
  make DESTDIR="$pkgdir/" install
}
