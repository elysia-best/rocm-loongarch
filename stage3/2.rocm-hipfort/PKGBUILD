pkgbase='rocm-hipfort'
pkgname=('rocm-hipfort')
pkgdesc="rocm-core is a utility which can be used to get ROCm release version."
arch=('loong64' 'x86_64')
license=('MIT')
pkgver=6.4.2
pkgrel=642000
ROCM_ROOT=/opt/rocm-${pkgver}
PATH=$ROCM_ROOT/bin:$PATH
LLVM_DIR=$ROCM_ROOT
url="https://github.com/ROCm/ROCT-Thunk-Interface.git"

source=(
    "git+https://github.com/ROCm/hipfort.git#tag=rocm-$pkgver"
)
b2sums=('SKIP')
depends=(
  "rocm-clr=${pkgver}"
)
PATH=/opt/rocm-${pkgver}/lib/llvm/bin:$PATH
ROCM_PATH=/opt/rocm-${pkgver}
prepare() {
  CFLAGS="-pipe -fPIC"
  cat  > toolchain.cmake << EOF
set(CMAKE_BUILD_TYPE "Release")
set(CMAKE_C_FLAGS "$CFLAGS")
set(CMAKE_CXX_FLAGS "$CFLAGS")
set(CMAKE_BUILD_RPATH "/opt/rocm-${pkgver}/lib;/opt/rocm-${pkgver}/lib64;/opt/rocm-${pkgver}/lib/llvm/lib")
set(CMAKE_INSTALL_RPATH "/opt/rocm-${pkgver}/lib;/opt/rocm-${pkgver}/lib64;/opt/rocm-${pkgver}/lib/llvm/lib")
set(CMAKE_FIND_ROOT_PATH "/opt/rocm-${pkgver}/")
set(CMAKE_C_COMPILER "/opt/rocm-${pkgver}/lib/llvm/bin/clang")
set(CMAKE_CXX_COMPILER "/opt/rocm-${pkgver}/lib/llvm/bin/clang++")
set(CMAKE_Fortran_FLAGS "-ffree-form -cpp" )
EOF
  mkdir build || true
  cd build
  cmake ../hipfort \
   -DHIPFORT_AR=/opt/rocm-${pkgver}/lib/llvm/bin/llvm-ar \
   -DHIPFORT_RANLIB=/opt/rocm-${pkgver}/lib/llvm/bin/llvm-ranlib \
   -DCMAKE_INSTALL_PREFIX="/opt/rocm-${pkgver}/lib/llvm/" \
   -DCMAKE_TOOLCHAIN_FILE=$PWD/../toolchain.cmake \
  -G "Unix Makefiles"
}
build() {
  mkdir build || true
  cd build
  make -j$(nproc)
}

check() {
#  cd "ROCm-CompilerSupport"
#  cd build
#  make ctest
echo
}

#packaging() {

#}
package() {
  cd build
  make DESTDIR="$pkgdir/" install
}
