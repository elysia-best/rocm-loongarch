pkgbase='rocm-rocJPEG'
pkgname=('rocm-rocJPEG')
pkgdesc="rocm-core is a utility which can be used to get ROCm release version."
arch=('loong64' 'x86_64')
license=('MIT')
pkgver=6.4.3
pkgrel=643000
ROCM_ROOT=/opt/rocm-${pkgver}
PATH=$ROCM_ROOT/bin:$PATH
LLVM_DIR=$ROCM_ROOT
url="https://github.com/ROCm/ROCT-Thunk-Interface.git"

source=(
    "git+https://github.com/ROCm/rocJPEG.git#tag=rocm-$pkgver"
)
b2sums=('SKIP')
depends=(
  "rocm-clr=${pkgver}"
)
PATH=/opt/rocm-${pkgver}/lib/llvm/bin:$PATH
#export ROCM_PATH=/opt/rocm-${pkgver}
prepare() {
#  sed -i '32d' hipfort/test/CMakeLists.txt
#  sed -i '32i find_package( HIP CONFIG REQUIRED )' hipfort/test/CMakeLists.txt
  CFLAGS="-pipe  -fPIC"
  cat  > toolchain.cmake << EOF
set(CMAKE_BUILD_TYPE "Release")
set(CMAKE_C_FLAGS "$CFLAGS")
set(CMAKE_CXX_FLAGS "$CFLAGS")
set(CMAKE_BUILD_RPATH "/opt/rocm-${pkgver}/lib;/opt/rocm-${pkgver}/lib64;/opt/rocm-${pkgver}/lib/llvm/lib")
set(CMAKE_INSTALL_RPATH "/opt/rocm-${pkgver}/lib;/opt/rocm-${pkgver}/lib64;/opt/rocm-${pkgver}/lib/llvm/lib")
set(CMAKE_FIND_ROOT_PATH "/opt/rocm-${pkgver}/")
set(CMAKE_C_COMPILER "/opt/rocm-${pkgver}/lib/llvm/bin/amdclang")
set(CMAKE_CXX_COMPILER "/opt/rocm-${pkgver}/lib/llvm/bin/amdclang++")
set(CMAKE_SHARED_LINKER_FLAGS "-L/opt/rocm-${pkgver}/lib64")
EOF

  mkdir build || true
  cd build
  sed -i 's!/opt/amdgpu/include!/usr/include!g' ../rocJPEG/cmake/FindLibva.cmake
  cmake ../rocJPEG \
   -DCMAKE_TOOLCHAIN_FILE=$PWD/../toolchain.cmake \
   -DCMAKE_INSTALL_PREFIX="/opt/rocm-${pkgver}/" \
  -G "Unix Makefiles"
}
build() {
  mkdir build || true
  cd build
  make -j$(nproc)
}

check() {
#  cd "ROCm-CompilerSupport"
#  cd build
#  make ctest
echo
}

#packaging() {

#}
package() {
  cd build
  make DESTDIR="$pkgdir/" install
}
