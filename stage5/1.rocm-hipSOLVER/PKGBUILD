pkgbase='rocm-hipSOLVER'
pkgname=('rocm-hipSOLVER')
pkgver=6.4.3
pkgrel=643000
pkgdesc="rocm-core is a utility which can be used to get ROCm release version."
arch=('loong64' 'x86_64')
license=('MIT')
url="https://github.com/ROCm/ROCT-Thunk-Interface.git"

source=(
    "git+https://github.com/ROCm/hipSOLVER.git#tag=rocm-$pkgver"
)
b2sums=('SKIP')
depends=(
  "rocm-clr=${pkgver}"
  "rocm-rocBLAS=${pkgver}"
  "rocm-rocSOLVER=${pkgver}"
)
PATH=/opt/rocm-${pkgver}/bin:/opt/rocm-${pkgver}/lib/llvm/bin:$PATH
prepare() {
  EXT_CFLAGS="-fPIC"
  if [ -n $GPU_TARGETS ] && [ $GPU_TARGETS != 'all' ]; then
    targetSet=( -DAMDGPU_TARGETS=${GPU_TARGETS} )
    IFS=';' read -a targets <<<  "$GPU_TARGETS"
    for target in "${targets[@]}"; do
      EXT_CFLAGS="$EXT_CFLAGS --offload-arch=$target"
    done
  else
    targetSet=( )
  fi

  cat  > toolchain.cmake << EOF
set(CMAKE_BUILD_TYPE "Release")
set(CMAKE_C_FLAGS "$CFLAGS")
set(CMAKE_CXX_FLAGS "$CFLAGS -parallel-jobs=$(nproc)")
set(CMAKE_BUILD_RPATH "/opt/rocm-${pkgver}/lib;/opt/rocm-${pkgver}/lib64;/opt/rocm-${pkgver}/lib/llvm/lib")
set(CMAKE_INSTALL_RPATH "/opt/rocm-${pkgver}/lib;/opt/rocm-${pkgver}/lib64;/opt/rocm-${pkgver}/lib/llvm/lib")
set(CMAKE_FIND_ROOT_PATH "/opt/rocm-${pkgver}/")
set(CMAKE_C_COMPILER "/opt/rocm-${pkgver}/lib/llvm/bin/clang")
set(CMAKE_CXX_COMPILER "/opt/rocm-${pkgver}/lib/llvm/bin/amdclang++")
set(CMAKE_SHARED_LINKER_FLAGS "-L/opt/rocm-${pkgver}/lib64")
set(CMAKE_EXE_LINKER_FLAGS "-L/opt/rocm-${pkgver}/lib64")
EOF

  mkdir build || true
  cd build
  cmake ../hipSOLVER \
   -DCMAKE_INSTALL_PREFIX=/opt/rocm-${pkgver} \
   -DCMAKE_TOOLCHAIN_FILE=$PWD/../toolchain.cmake \
   -DBUILD_WITH_SPARSE=OFF \
   ${targetSet[@]} \
  -G "Unix Makefiles"
}
build() {
  mkdir build || true
  cd build
  make -j$(nproc)
}

check() {
echo
}

package() {
  cd build
  make DESTDIR="$pkgdir/" install
}
